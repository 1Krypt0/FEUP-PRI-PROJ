{
  "add-field-type": [
    {
      "name": "articleText",
      "class": "solr.TextField",
      "indexAnalyzer": {
        "tokenizer": { "class": "solr.StandardTokenizerFactory" },
        "filters": [
          {
            "class": "solr.ASCIIFoldingFilterFactory",
            "preserveOriginal": true
          },
          { "class": "solr.LowerCaseFilterFactory" },
          { "class": "solr.EnglishMinimalStemFilterFactory" },
          { "class": "solr.PorterStemFilterFactory" }
        ]
      },
      "queryAnalyzer": {
        "tokenizer": { "class": "solr.StandardTokenizerFactory" },
        "filters": [
          {
            "class": "solr.ASCIIFoldingFilterFactory",
            "preserveOriginal": true
          },
          { "class": "solr.LowerCaseFilterFactory" },
          { "class": "solr.EnglishMinimalStemFilterFactory" },
          { "class": "solr.PorterStemFilterFactory" }
        ]
      }
    },
    {
      "name": "articleDate",
      "class": "solr.DatePointField"
    }
  ],
  "add-field": [
    {
      "name": "title",
      "type": "articleText",
      "indexed": true
    },
    {
      "name": "url",
      "type": "text_en",
      "indexed": false
    },
    {
      "name": "content",
      "type": "articleText",
      "indexed": true
    },
    {
      "name": "author",
      "type": "text_en",
      "indexed": true
    },
    {
      "name": "date",
      "type": "articleDate",
      "indexed": true
    },
    {
      "name": "tags",
      "type": "text_en",
      "indexed": true,
      "multiValued": true
    },
    {
      "name": "sections",
      "type": "text_en",
      "indexed": true,
      "multiValued": true
    }
  ]
}
